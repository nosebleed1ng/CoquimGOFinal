<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.CoquimGO" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/coquimgo_primary</item>
        <item name="colorOnPrimary">@color/coquimgo_on_primary</item>
        <item name="colorSecondary">@color/coquimgo_secondary</item>
        <item name="colorOnSecondary">@color/coquimgo_on_secondary</item>

        <item name="android:colorBackground">@color/coquimgo_background</item>
        <item name="colorSurface">@color/coquimgo_surface</item>
        <item name="colorOnSurface">@color/coquimgo_on_background</item>

        <item name="android:statusBarColor">@color/coquimgo_primary_dark</item>

        <item name="materialButtonStyle">@style/Widget.CoquimGO.PrimaryButton</item>
    </style>

    <style name="Widget.CoquimGO.FiltroChip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/coquimgo_surface</item>
        <item name="chipStrokeColor">@color/coquimgo_primary</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textColor">@color/coquimgo_on_background</item>
        <item name="checkedIconVisible">false</item>
        <item name="rippleColor">@color/nav_item_ripple</item>
    </style>

    <style name="Widget.CoquimGO.LugarCard" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardElevation">6dp</item>
    </style>

    <!-- BotÃ³n principal (visitado / favorito) -->
    <style name="Widget.CoquimGO.PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal">24dp</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="backgroundTint">@color/coquimgo_primary</item>
        <item name="android:textColor">@color/coquimgo_on_primary</item>
        <item name="cornerRadius">50dp</item>
    </style>

    <style name="Widget.CoquimGO.SecondaryButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal">24dp</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="strokeColor">@color/coquimgo_secondary</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/coquimgo_secondary</item>
        <item name="cornerRadius">50dp</item>
    </style>

</resources>
