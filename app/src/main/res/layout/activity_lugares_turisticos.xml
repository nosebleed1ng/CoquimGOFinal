<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LugaresTuristicosActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
            app:title="@string/lugaresTuristicos"
            app:titleCentered="true"
            app:elevation="4dp" />

        <!-- Filtro por categoría -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:gravity="end|center_vertical">

            <Spinner
                android:id="@+id/spinnerFiltro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:popupBackground="@color/white"
                android:entries="@array/opciones_filtro"
                android:spinnerMode="dropdown"
                android:background="@drawable/bg_spinner_moderno" />
        </LinearLayout>

        <!-- Barra de búsqueda moderna -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputBuscar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="10dp"
            app:boxBackgroundMode="outline"
            app:boxBackgroundColor="@android:color/white"
            app:boxStrokeColor="@color/azulOscuro"
            app:boxStrokeWidthFocused="2dp"
            app:boxCornerRadiusTopStart="24dp"
            app:boxCornerRadiusTopEnd="24dp"
            app:boxCornerRadiusBottomStart="24dp"
            app:boxCornerRadiusBottomEnd="24dp"
            app:startIconDrawable="@android:drawable/ic_menu_search"
            app:startIconTint="@color/azulOscuro"
            app:endIconMode="clear_text"
            app:endIconTint="@color/azulOscuro"
            android:elevation="2dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etBuscarLugar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/buscar_lugar"
                android:imeOptions="actionSearch"
                android:singleLine="true"
                android:paddingHorizontal="8dp"
                android:textColor="@android:color/black"
                android:textColorHint="#99000000" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Lista de lugares -->
        <ScrollView
            android:id="@+id/scrollLugares"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/fondo_lugares">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center_horizontal">

                <!-- FUERTE LAMBERT -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardfuertelambert"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="18dp"
                    app:cardUseCompatPadding="true"
                    app:cardElevation="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackgroundBorderless">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imgfuertelambert"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/fuertelambert" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/bg_card_gradient" />

                        <TextView
                            android:id="@+id/txtfuertelambert"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:padding="10dp"
                            android:text="@string/txtfuertelambert"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <!-- CRUZ DEL TERCER MILENIO -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardcruztercermilenio"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="18dp"
                    app:cardUseCompatPadding="true"
                    app:cardElevation="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackgroundBorderless">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imgcruztercermilenio"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/cruztercermilenio" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/bg_card_gradient" />

                        <TextView
                            android:id="@+id/txtcruztercermilenio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:padding="10dp"
                            android:text="@string/txtcruzdeltercermilenio"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <!-- PUEBLITO PEÑUELAS -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardpueblitopeñuelas"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="18dp"
                    app:cardUseCompatPadding="true"
                    app:cardElevation="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackgroundBorderless">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imgpueblitopeñuelas"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/pueblitopenuelas" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/bg_card_gradient" />

                        <TextView
                            android:id="@+id/pueblitopeñuelas"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:padding="10dp"
                            android:text="@string/txtpueblitopeñuelas"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <!-- AVENIDA DEL MAR -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardavenidadelmar"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="18dp"
                    app:cardUseCompatPadding="true"
                    app:cardElevation="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackgroundBorderless">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/img"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/avenidadelmar" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/bg_card_gradient" />

                        <TextView
                            android:id="@+id/avenidadelmar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:padding="10dp"
                            android:text="@string/txtavenidadelmar"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <!-- LA MEZQUITA -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardlamezquita"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="18dp"
                    app:cardUseCompatPadding="true"
                    app:cardElevation="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackgroundBorderless">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imglamezquita"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/lamezquita" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/bg_card_gradient" />

                        <TextView
                            android:id="@+id/lamezquita"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:padding="10dp"
                            android:text="@string/txtlamezquita"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <!-- EL FARO -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardelfaro"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="18dp"
                    app:cardUseCompatPadding="true"
                    app:cardElevation="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackgroundBorderless">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imgelfaro"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/elfaro" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/bg_card_gradient" />

                        <TextView
                            android:id="@+id/elfaro"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:padding="10dp"
                            android:text="@string/txtelfaro"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <!-- PARQUE JAPONÉS -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardparquejapones"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="18dp"
                    app:cardUseCompatPadding="true"
                    app:cardElevation="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackgroundBorderless">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imgparquejapones"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/parquejapones" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/bg_card_gradient" />

                        <TextView
                            android:id="@+id/parquejapones"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:padding="10dp"
                            android:text="@string/txtparquejapones"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- AQUÍ ES DONDE FALTABA EL HEADER CON EL LOGO -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/main_drawer_menu" />

</androidx.drawerlayout.widget.DrawerLayout>
