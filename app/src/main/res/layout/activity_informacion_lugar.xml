<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:padding="16dp"
    android:fadeScrollbars="false">

    <LinearLayout
        android:id="@+id/layoutContenido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- IMAGEN PRINCIPAL DEL LUGAR -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardImagen"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="22dp"
            app:cardElevation="10dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="?attr/colorSurface">

            <ImageView
                android:id="@+id/imglugar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="@string/lugar_imagen" />
        </androidx.cardview.widget.CardView>

        <!-- NOMBRE DEL LUGAR -->
        <TextView
            android:id="@+id/txtnombreLugar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:textColor="?attr/colorOnBackground"
            android:layout_marginBottom="6dp"
            android:gravity="center" />

        <!-- TIPO DE LUGAR (CHIP) -->
        <TextView
            android:id="@+id/txttipoLugar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:background="@drawable/bg_chip_tipo"
            android:fontFamily="sans-serif-medium"
            android:paddingHorizontal="14dp"
            android:paddingVertical="6dp"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

        <!-- SECCIÓN DESCRIPCIÓN -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="?attr/colorSurface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descripción"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="?attr/colorPrimary"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/txtdescripcion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="?attr/colorOnSurface"
                    android:lineSpacingExtra="5dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- SECCIÓN INFORMACIÓN DEL LUGAR -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardInfoLugar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="?attr/colorSurface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Información del lugar"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="?attr/colorPrimary"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/txtubicacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:id="@+id/txthorarios"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/txtcostos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/colorOnSurface" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- MAPA -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardMapa"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="?attr/colorSurface">

            <fragment
                android:id="@+id/mapa"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </androidx.cardview.widget.CardView>

        <!-- NUEVA SECCIÓN: RATING -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardRating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="?attr/colorSurface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvTituloRating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tu valoración del lugar"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="?attr/colorPrimary"
                    android:layout_marginBottom="8dp" />

                <RatingBar
                    android:id="@+id/ratingBarVisita"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="0.5"
                    android:rating="4.0" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- BOTONES VISITADO / FAVORITO -->
        <LinearLayout
            android:id="@+id/layoutBotonesAccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/btnmarcarvisitado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:paddingHorizontal="22dp"
                android:paddingVertical="10dp"
                android:backgroundTint="?attr/colorPrimary"
                android:text="@string/visitado"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:fontFamily="sans-serif-medium" />

            <Button
                android:id="@+id/btnmarcarfavorito"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="22dp"
                android:paddingVertical="10dp"
                android:backgroundTint="?attr/colorPrimary"
                android:text="@string/favorito"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <!-- BOTÓN VOLVER -->
        <Button
            android:id="@+id/btnvolver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/volver"
            android:layout_marginTop="22dp"
            android:paddingHorizontal="30dp"
            android:paddingVertical="10dp"
            android:backgroundTint="?attr/colorSecondary"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:fontFamily="sans-serif-medium" />
    </LinearLayout>
</ScrollView>
