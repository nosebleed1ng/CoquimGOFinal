<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Fondo -->
    <ImageView
        android:id="@+id/bgImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/coquimgosplash" />

    <View
        android:id="@+id/dimOverlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#77000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- TEXTO DE BIENVENIDA -->
    <TextView
        android:id="@+id/txtBienvenida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0"
        android:text="@string/splash_bienvenida"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:fontFamily="sans-serif-medium"
        android:letterSpacing="0.04"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- LOGO CENTRADO MÁS ABAJO -->
    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:alpha="0"
        android:scaleType="centerInside"
        android:src="@drawable/coquimgo"
        app:layout_constraintTop_toBottomOf="@id/txtBienvenida"
        app:layout_constraintBottom_toTopOf="@id/txtSlogan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.75" />

    <!-- SLOGAN -->
    <TextView
        android:id="@+id/txtSlogan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:alpha="0"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="@string/textoPrincipal"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:lineSpacingExtra="3dp"
        app:layout_constraintTop_toBottomOf="@id/imgLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- DIVISOR -->
    <View
        android:id="@+id/centerDivider"
        android:layout_width="160dp"
        android:layout_height="1dp"
        android:alpha="0"
        android:layout_marginTop="10dp"
        android:background="#80FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/txtSlogan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- HIGHLIGHTS -->
    <TextView
        android:id="@+id/txtHighlights"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0"
        android:layout_marginTop="8dp"
        android:text="@string/splash_highlights"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:fontFamily="sans-serif-medium"
        android:letterSpacing="0.03"
        app:layout_constraintTop_toBottomOf="@id/centerDivider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- PANEL INFERIOR -->
    <View
        android:id="@+id/bottomPanel"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginBottom="110dp"
        android:alpha="0"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- BOTÓN INICIAR -->
    <Button
        android:id="@+id/btnIniciar"
        android:layout_width="180dp"
        android:layout_height="55dp"
        android:alpha="0"
        android:background="@drawable/bg_btn_splash_fire"
        android:fontFamily="sans-serif-medium"
        android:text="@string/iniciar"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/bottomPanel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- PROGRESS BAR -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- FOOTER -->
    <TextView
        android:id="@+id/txtFooter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="22dp"
        android:alpha="0"
        android:fontFamily="sans-serif-light"
        android:text="@string/splash_footer"
        android:textColor="#F5F5F5"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
