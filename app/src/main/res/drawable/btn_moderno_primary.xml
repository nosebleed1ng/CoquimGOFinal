<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="#6A1B9A" android:endColor="#8E24AA" android:angle="45" />
            <corners android:radius="30dp" />
            <padding android:left="16dp" android:right="16dp" android:top="10dp" android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient android:startColor="#8E24AA" android:endColor="#9C27B0" android:angle="45" />
            <corners android:radius="30dp" />
        </shape>
    </item>
</selector>
