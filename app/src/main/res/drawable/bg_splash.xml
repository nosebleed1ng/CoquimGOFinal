<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="315"
                android:startColor="@color/coquimgo_primary"
                android:endColor="@color/coquimgo_primary_dark" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="800dp"
                android:centerX="0.5"
                android:centerY="0.0"
                android:startColor="#33FFFFFF"
                android:endColor="@android:color/transparent" />
        </shape>
    </item>

</layer-list>
